include ../radio/_radio.pug
include ../input/_input.pug
include ../range/_range.pug
include ../button/_button.pug

section.gc-calculation-contribution.gc-width-limiter.gc-pt-70.gc-pb-95
    h2 Рассчитайте свой вклад
    .gc-calculation-contribution__container.gc-mt-40
        .gc-calculation-contribution__calc-input.gc-card.gc-card_white
            .gc-child-inline-block.gc-child-vertical-align.gc-mb-30
                p.gc-mr-10 Выберите валюту:
                +custom-radio('calc',[
                    {
                        "label": "KGS",
                        "class": "",
                        "id": "valute-kgs",
                        "checked": true
                    },{
                        "label": "USD",
                        "class": "",
                        "id": "valute-usd",
                        "checked": false
                    }          
                ], 'gc-custom-radio_ms')
            .gc-child-inline-block.gc-child-vertical-align.gc-mb-40
                p.gc-mr-10 Укажите сумму открытия:
                +input-ms(placeholder='сумма' value='100 000' class='money-mask gc-w-160' id='opening-amount')
            .gc-child-inline-block.gc-child-vertical-align.gc-mb-20
                p.gc-mb-20 Выберите срок (мес.):
                +slider-range(['1-2', '3-5', '6-8', '9-11', '12-60'])(id='calculation-contribution-range-box')
            p % ставка: <span class='gc-t-color-red' id='interest-rate'>13%</span>


        .gc-calculation-contribution__calc-out.gc-card_red
            .gc-calculation-contribution__special-text.gc-child-inline-block.gc-child-vertical-align.gc-mb-30
                p.gc-mr-10 Сумма % за весь срок вклада:
                p#net-profit 90 538, 35
            .gc-calculation-contribution__special-text.gc-child-inline-block.gc-child-vertical-align.gc-mb-50
                p.gc-mr-10 Общая сумма:
                p#total-amount 190 538, 35
            +button('Заказать звонок')(class='gc-button_fill-white open-modal-form' onclick="yaCounter52972660.reachGoal('CRE'); return true")
            
